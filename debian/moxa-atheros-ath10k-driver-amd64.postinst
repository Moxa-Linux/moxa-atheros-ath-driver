#!/bin/sh
# See deb-postinst(5).

set -e

# Ensure modules.dep is update
update_moddep() {
	KRELEASE=4.9.0-11-amd64
	depmod "${KRELEASE}"
}

case "$1" in
configure)
	update_moddep
	;;

abort-upgrade | abort-deconfigure | abort-remove) ;;

*)
	echo "$0 called with unknown argument '$1'" 1>&2
	exit 1
	;;
esac

#DEBHELPER#
exit 0
